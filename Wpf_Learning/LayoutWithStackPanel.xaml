<Window x:Class="Wpf_Learning.LayoutWithStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Learning"
        mc:Ignorable="d"
        Title="Layout With Stack Panel" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <TextBlock Name="tbName" Height="40" Margin="0 0 10 0">Your Name:</TextBlock>
            <TextBox Name="txtName" Width="120" Height="{Binding Path=Height, ElementName=tbName}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1">
            <TextBlock Text="{Binding Path=Height, ElementName=tbName}"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="2">
            <TextBlock Text="{Binding Path=Height, ElementName=txtName}"></TextBlock>
        </StackPanel>
    </Grid>
</Window>